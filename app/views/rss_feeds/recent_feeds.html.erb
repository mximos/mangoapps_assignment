<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Live Feeds
    </h1>
    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-rss"></i> Live Feeds
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading"></div>
      <div class="panel-body">
        <% if @items.blank? %>
          <div class="text-center">
            <span>No feeds to show</span>
          </div>
        <% end %>
        <ul class="list-group">
          <% @items.each do |item| %>
            <li class="list-group-item">
              <span class="badge"><%= distance_of_time_in_words_to_now(item.published_date) %> ago</span>
              <%= link_to item.title, item.link %> 
            </li>
          <% end %>
          
        </ul>
      </div>
    </div>
    <br>
    <br><br>
  </div>
</div>
