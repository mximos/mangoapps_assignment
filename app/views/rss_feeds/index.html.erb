<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      MANAGE FEEDS
    </h1>
    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-fw fa-wrench"></i> MANAGE FEEDS
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <% unless @rss_feeds.blank? %>
      <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>URL</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @rss_feeds.each do |rss_feed| %>
          <tr>
            <td><%= rss_feed.name %></td>
            <td><%= link_to rss_feed.url, rss_feed.url %></td>
            <td>
              <i class="fa fa-edit"></i> 
              <%= link_to 'Edit', edit_rss_feed_path(rss_feed) %></td>
            <td>
              <i class="fa fa-trash red"></i> 
              <%= link_to 'Destroy', rss_feed_path(rss_feed), method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% end %>
    <br>
    <%= link_to new_rss_feed_path, class: "btn btn-default" do %>
      <i class="fa fa-plus"></i> New RSS FEED
    <% end %>
    <br><br>
  </div>
</div>
